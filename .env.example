# Django Settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-railway-domain.up.railway.app
ENVIRONMENT=production

# Database PostgreSQL
# Railway automatically provides DATABASE_URL, you don't need to set it manually
# For local development, you can use individual variables:
DATABASE_URL=postgresql://postgres:password@localhost:5432/payroll_db
# Or use these individual variables (optional, for local dev only):
# DB_NAME=payroll_db
# DB_USER=postgres
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# Frontend URLs
FRONTEND_URL=https://your-frontend.vercel.app
BACKEND_URL=https://your-backend.up.railway.app

# Django Superuser (Admin) - Uses PIN authentication
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PIN=1234
# Note: Login is done with PIN, not password (unique_pin field)
